lor:#eb620d;border-color:#fff;">            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" fill="none"/></svg>            Bel ons direct          </a>        </div>      </div>    </div>  </section></div><script>document.addEventListener('DOMContentLoaded', function(){  /* ---------- Helpers ---------- */  function formatEuro(raw){    let s = String(raw||'').trim();    if (s.startsWith('€')) return s.replace(/^€\s*/, '€ ');    if (s.includes(',')) return '€ ' + s;    return '€ ' + s + ',-';  }  function valueFromAttr(el,period){    if(!el) return null;    const m=el.getAttribute('data-monthly'); const y=el.getAttribute('data-yearly');    return (period==='yearly') ? (y ?? m) : (m ?? y);  }  /* ---------- Main pricing toggle (default YEARLY) ---------- */  const mainToggle = document.getElementById('main-toggle');  function renderMain(period){    if(!mainToggle) return;    mainToggle.querySelectorAll('.toggle-option').forEach(o=>{      const active = o.dataset.period===period;      o.classList.toggle('active',active);      o.setAttribute('aria-selected',active?'true':'false');    });    document.querySelectorAll('.pricing-card').forEach(card=>{      const priceEl=card.querySelector('.plan-price');      const periodEl=card.querySelector('.plan-period');      if(priceEl){        const v=valueFromAttr(priceEl,period);        if(v!=null) priceEl.textContent=formatEuro(v);      }      if(periodEl) periodEl.textContent=(period==='yearly')?'per maand (jaarlijks)':'per maand';      card.querySelectorAll('.extra-user-price').forEach(el=>{        const v=valueFromAttr(el,period);        if(v!=null) el.textContent=formatEuro(v);      });    });  }  if (mainToggle){    mainToggle.addEventListener('click', e=>{      const opt=e.target.closest('.toggle-option'); if(!opt) return;      renderMain(opt.dataset.period);    });    const defaultMain = (mainToggle.querySelector('.toggle-option.active')?.dataset.period) || 'yearly';    renderMain(defaultMain);  }  /* ---------- Wappy toggle (content swap, default YEARLY) ---------- */  const wappyToggle = document.getElementById('wappy-toggle');  const wappyMonthly = document.getElementById('wappy-monthly');  const wappyYearly  = document.getElementById('wappy-yearly');  function renderWappy(period){    if(!wappyToggle || !wappyMonthly || !wappyYearly) return;    wappyToggle.querySelectorAll('.toggle-option').forEach(o=>{      const active=o.dataset.period===period;      o.classList.toggle('active',active);      o.setAttribute('aria-selected',active?'true':'false');    });    if(period==='monthly'){      wappyMonthly.classList.add('active');      wappyYearly.classList.remove('active');    } else {      wappyYearly.classList.add('active');      wappyMonthly.classList.remove('active');    }  }  if (wappyToggle && wappyMonthly && wappyYearly){    wappyToggle.addEventListener('click', e=>{      const opt=e.target.closest('.toggle-option'); if(!opt) return;      renderWappy(opt.dataset.period);    });    const defaultWappy = (wappyToggle.querySelector('.toggle-option.active')?.dataset.period) || 'yearly';    renderWappy(defaultWappy);  }  /* ---------- FAQ (event delegation with chevron rotation) ---------- */  const faqSection=document.querySelector('.rh-faq-section');  if(faqSection){    faqSection.addEventListener('click', e=>{      const btn=e.target.closest('.faq-question'); if(!btn) return;      const item=btn.closest('.faq-item');      const answer=item.querySelector('.faq-answer');      const open=item.classList.contains('active');      // Close other items      faqSection.querySelectorAll('.faq-item.active').forEach(i=>{        if(i!==item){          i.classList.remove('active');          const b=i.querySelector('.faq-question'); const a=i.querySelector('.faq-answer');          if(b) { b.classList.remove('active'); b.setAttribute('aria-expanded','false'); }          if(a) a.classList.remove('active');        }      });      // Toggle current      item.classList.toggle('active',!open);      btn.classList.toggle('active',!open);      if(answer) answer.classList.toggle('active',!open);      btn.setAttribute('aria-expanded',!open?'true':'false');    });  }});</script>
