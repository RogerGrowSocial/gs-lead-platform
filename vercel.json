{
  "version": 2,
  "installCommand": "npm ci",
  "buildCommand": "echo 'Express.js app - no Next.js build needed' && rm -rf .next 2>/dev/null || true",
  "framework": null,
  "functions": {
    "api/index.js": {
      "maxDuration": 30,
      "memory": 1024,
      "includeFiles": [
        "server.js",
        "routes/**",
        "services/**",
        "middleware/**",
        "config/**",
        "views/**",
        "helpers/**",
        "utils/**",
        "lib/**",
        "hooks/**",
        "components/**",
        "guards/**",
        "integrations/**",
        "cron/**",
        "templates/**"
      ]
    }
  },
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/api/index.js"
    }
  ]
}
