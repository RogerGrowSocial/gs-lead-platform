<!DOCTYPE html>
<html lang="nl">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin | GrowSocial</title>
  <link rel="icon" type="image/webp" href="/img/favicon-growsocial.webp">
  <link rel="stylesheet" href="/css/design-tokens.css">
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/css/chart-theme.css">
  <script src="https://cdn.tailwindcss.com" defer></script>
</head>
<body class="bg-gray-50">
  <div id="shell-root" style="min-height: 60vh; display: flex; align-items: center; justify-content: center; flex-direction: column; gap: 1rem;">
    <p class="text-gray-600">Admin wordt geladen...</p>
    <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-indigo-600"></div>
  </div>
  <script>
    window.__BOOTSTRAP_URL__ = '<%= typeof bootstrapUrl !== "undefined" && bootstrapUrl ? bootstrapUrl : "/api/admin/dashboard-bootstrap" %>';
    (function() {
      var root = document.getElementById('shell-root');
      var url = window.__BOOTSTRAP_URL__;
      var done = false;
      function showFallback(msg) {
        if (done) return;
        done = true;
        root.innerHTML = '<p class="text-gray-600">' + (msg || 'Admin laden...') + ' <a href="/admin?full=1" class="text-indigo-600 underline">Ga naar admin</a></p>';
      }
      function goFull() {
        if (done) return;
        done = true;
        window.location.replace('/admin?full=1');
      }
      var t = setTimeout(function() {
        showFallback('Laden duurt te lang.');
        setTimeout(goFull, 1500);
      }, 12000);
      var controller = new AbortController();
      var timeoutId = setTimeout(function() { controller.abort(); }, 10000);
      fetch(url, { credentials: 'same-origin', signal: controller.signal })
        .then(function(r) {
          clearTimeout(timeoutId);
          if (!r.ok) {
            showFallback(r.status === 401 ? 'Log in om door te gaan.' : 'Kon gegevens niet laden.');
            return null;
          }
          return r.json();
        })
        .then(function(data) {
          clearTimeout(t);
          if (done) return;
          if (data && data.success) {
            done = true;
            window.location.replace('/admin?full=1');
          } else {
            showFallback('Dashboard geladen.');
          }
        })
        .catch(function() {
          clearTimeout(t);
          showFallback('Kon gegevens niet laden.');
          setTimeout(goFull, 2000);
        });
    })();
  </script>
</body>
</html>
