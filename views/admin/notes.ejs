  </style>
  
  <script>
    (function() {
      function formatDate(iso) {
        if (!iso) return '-';
        const d = new Date(iso);
        return d.toLocaleDateString('nl-NL', { day: '2-digit', month: 'short', year: 'numeric', hour: '2-digit', minute: '2-digit' });
      }
      function escapeHtml(s) { return (s||'').replace(/&/g,'&amp;').replace(/"/g,'&quot;').replace(/</g,'&lt;').replace(/>/g,'&gt;'); }
      function escapeAttr(s) { return escapeHtml(s).replace(/\\n/g,'&#10;'); }
      
      function renderNoteCard(n) {
        const isEdited = n.updated_at && n.created_at && Math.abs(new Date(n.updated_at).getTime() - new Date(n.created_at).getTime()) > 2000;
        const content = n.content ? escapeHtml(n.content).replace(/\n/g,'<br>') : '<span class="note-content-empty">Geen inhoud</span>';
        return '<div class="note-card" data-note-id="'+n.id+'" data-note-title="'+escapeAttr(n.title)+'" data-note-content="'+escapeAttr(n.content||'')+'">'+
          '<div class="note-card-header"><h3 class="note-title">'+escapeHtml(n.title)+'</h3>'+
          '<span class="note-date">'+formatDate(n.created_at)+(isEdited ? ' · <span class="note-updated">bijgewerkt '+formatDate(n.updated_at)+'</span>' : '')+'</span></div>'+
          '<div class="note-content">'+content+'</div>'+
          '<div class="note-card-actions">'+
          '<button type="button" class="btn-note-edit" data-note-id="'+n.id+'" title="Bewerken"><i class="fas fa-pen"></i></button>'+
          '<button type="button" class="btn-note-delete" data-note-id="'+n.id+'" title="Verwijderen"><i class="fas fa-trash"></i></button>'+
          '</div></div>';
      }
      
      function filterAndRender() {
        const notes = window.__NOTES__ || [];
        const q = (document.getElementById('notesSearchInput')?.value || '').trim().toLowerCase();
        const sort = document.getElementById('notesSortSelect')?.value || 'newest';
        let filtered = q ? notes.filter(n => 
          (n.title||'').toLowerCase().includes(q) || (n.content||'').toLowerCase().includes(q)
        ) : notes;
        filtered = [...filtered].sort((a,b) => {
          const da = new Date(a.created_at).getTime();
          const db = new Date(b.created_at).getTime();
          return sort === 'newest' ? db - da : da - db;
        });
        const container = document.getElementById('notesListContainer');
        const searchEmpty = document.getElementById('notesSearchEmpty');
        const countEl = document.getElementById('notesCount');
        if (!container) return;
        const emptyDiv = container.querySelector('.notes-empty');
        if (notes.length === 0) return;
        if (filtered.length === 0) {
          container.querySelectorAll('.note-card').forEach(c => c.remove());
          if (searchEmpty) {
            searchEmpty.style.display = 'flex';
            const queryEl = document.getElementById('notesSearchQuery');
            if (queryEl) queryEl.textContent = q || '';
          }
        } else {
          if (searchEmpty) searchEmpty.style.display = 'none';
          container.querySelectorAll('.note-card').forEach(c => c.remove());
          filtered.forEach(n => container.insertAdjacentHTML('beforeend', renderNoteCard(n)));
        }
        if (countEl) countEl.textContent = filtered.length + ' notitie' + (filtered.length !== 1 ? 's' : '') + (q ? ' (gefilterd)' : '');
      }
      
      const formCard = document.getElementById('noteFormCard');
      const form = document.getElementById('noteForm');
      const newBtn = document.getElementById('newNoteBtn');
      const cancelBtn = document.getElementById('cancelNoteBtn');
      const notesEmpty = document.getElementById('notesEmpty');
      
      function showForm() {
        formCard.style.display = 'block';
        document.getElementById('noteTitle').focus();
      }
      
      function hideForm() {
        formCard.style.display = 'none';
        form.reset();
      }
      
      newBtn && newBtn.addEventListener('click', showForm);
      document.getElementById('emptyStateNewNoteBtn')?.addEventListener('click', showForm);
      cancelBtn && cancelBtn.addEventListener('click', hideForm);
      
      document.getElementById('notesSearchInput')?.addEventListener('input', filterAndRender);
      document.getElementById('notesSearchInput')?.addEventListener('keyup', filterAndRender);
      document.getElementById('notesSortSelect')?.addEventListener('change', filterAndRender);
      
      // Edit modal
      const editModal = document.getElementById('noteEditModal');
      const editForm = document.getElementById('noteEditForm');
      const editCancelBtn = document.getElementById('noteEditCancel');
      const editDeleteBtn = document.getElementById('noteEditDelete');
      
      function openEditModal(noteId, title, content) {
        document.getElementById('noteEditId').value = noteId;
        document.getElementById('noteEditTitle').value = title || '';
        document.getElementById('noteEditContent').value = content || '';
        if (editModal) editModal.style.display = 'flex';
        document.getElementById('noteEditTitle').focus();
      }
      
      function closeEditModal() {
        if (editModal) editModal.style.display = 'none';
      }
      
      editCancelBtn && editCancelBtn.addEventListener('click', closeEditModal);
      editModal && editModal.querySelector('.note-modal-close') && editModal.querySelector('.note-modal-close').addEventListener('click', closeEditModal);
      editModal && editModal.querySelector('.note-modal-backdrop') && editModal.querySelector('.note-modal-backdrop').addEventListener('click', closeEditModal);
      document.addEventListener('keydown', (e) => { if (e.key === 'Escape' && editModal && editModal.style.display === 'flex') closeEditModal(); });
      
      document.addEventListener('click', (e) => {
        const editBtn = e.target.closest('.btn-note-edit');
        const deleteBtn = e.target.closest('.btn-note-delete');
        const card = e.target.closest('.note-card');
        if (card && !editBtn && !deleteBtn) {
          const id = card.dataset.noteId;
          const title = card.dataset.noteTitle || '';
          const content = card.dataset.noteContent || '';
          openEditModal(id, title, content);
        }
        if (editBtn) {
          e.preventDefault();
          e.stopPropagation();
          const editCard = editBtn.closest('.note-card');
          if (editCard) {
            const id = editCard.dataset.noteId;
            const title = editCard.dataset.noteTitle || '';
            const content = editCard.dataset.noteContent || '';
            openEditModal(id, title, content);
          }
        }
        if (deleteBtn) {
          e.preventDefault();
          e.stopPropagation();
          const delCard = deleteBtn.closest('.note-card');
          if (delCard && confirm('Weet je zeker dat je deze notitie wilt verwijderen?')) {
            const id = delCard.dataset.noteId;
            fetch('/admin/api/notes/' + id, { method: 'DELETE', credentials: 'same-origin' })
              .then(res => res.json())
              .then(data => {
                if (data.success) {
                  if (typeof window.showNotification === 'function') window.showNotification('Notitie verwijderd', 'success', 3000, false);
                  window.location.reload();
                } else throw new Error(data.error);
              })
              .catch(err => {
                if (typeof window.showNotification === 'function') window.showNotification(err.message || 'Fout bij verwijderen', 'error', 4000, false);
                else alert(err.message);
              });
          }
        }
      });
      
      editForm && editForm.addEventListener('submit', async (e) => {
        e.preventDefault();
        const id = document.getElementById('noteEditId').value;
        const title = document.getElementById('noteEditTitle').value.trim();
        const content = document.getElementById('noteEditContent').value.trim();
        if (!title) {
          if (typeof window.showNotification === 'function') window.showNotification('Titel is verplicht', 'error', 3000, false);
          return;
        }
        const submitBtn = editForm.querySelector('button[type="submit"]');
        const orig = submitBtn.innerHTML;
        submitBtn.disabled = true;
        submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Opslaan...';
        try {
          const res = await fetch('/admin/api/notes/' + id, {
            method: 'PUT',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ title, content }),
            credentials: 'same-origin'
          });
          const data = res.headers.get('content-type')?.includes('application/json') ? await res.json() : null;
          if (!res.ok) throw new Error(data?.error || 'Fout ' + res.status);
          if (data?.success) {
            closeEditModal();
            if (typeof window.showNotification === 'function') window.showNotification('Notitie opgeslagen', 'success', 3000, false);
            window.location.reload();
          } else throw new Error(data?.error || 'Fout bij opslaan');
        } catch (err) {
          if (typeof window.showNotification === 'function') window.showNotification(err.message, 'error', 4000, false);
          else alert(err.message);
        } finally {
          submitBtn.disabled = false;
          submitBtn.innerHTML = orig;
        }
      });
      
      editDeleteBtn && editDeleteBtn.addEventListener('click', (e) => {
        e.preventDefault();
        const id = document.getElementById('noteEditId').value;
        if (!id || !confirm('Weet je zeker dat je deze notitie wilt verwijderen?')) return;
        fetch('/admin/api/notes/' + id, { method: 'DELETE', credentials: 'same-origin' })
          .then(res => res.json())
          .then(data => {
            if (data.success) {
              closeEditModal();
              if (typeof window.showNotification === 'function') window.showNotification('Notitie verwijderd', 'success', 3000, false);
              window.location.reload();
            } else throw new Error(data.error);
          })
          .catch(err => {
            if (typeof window.showNotification === 'function') window.showNotification(err.message, 'error', 4000, false);
            else alert(err.message);
          });
      });
      
      form && form.addEventListener('submit', async (e) => {
        e.preventDefault();
        const title = document.getElementById('noteTitle').value.trim();
        const content = document.getElementById('noteContent').value.trim();
        
        if (!title) {
          if (typeof window.showNotification === 'function') {
            window.showNotification('Titel is verplicht', 'error', 3000, false);
          } else {
            alert('Titel is verplicht');
          }
          return;
        }
        
        const submitBtn = form.querySelector('button[type="submit"]');
