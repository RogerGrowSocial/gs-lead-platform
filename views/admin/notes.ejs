<%
  const formatDate = (iso) => {
    if (!iso) return '-'
    const d = new Date(iso)
    return d.toLocaleDateString('nl-NL', { day: '2-digit', month: 'short', year: 'numeric', hour: '2-digit', minute: '2-digit' })
  }
  const notesList = typeof notes !== 'undefined' ? notes : []
  const notesB64 = Buffer.from(JSON.stringify(notesList)).toString('base64')
%>
<%- include('../layouts/admin', {
  title: 'Notities',
  activeMenu: 'tools',
  activeSubmenu: 'notes',
  user: user,
  body: `
  <div class="notes-container">
    <div class="page-header">
      <div>
        <h1>Notities</h1>
        <p class="text-muted">Beheer je notities</p>
      </div>
      <button type="button" id="newNoteBtn" class="btn-primary">
        <i class="fas fa-plus"></i> Nieuwe notitie
      </button>
    </div>
    
    <!-- Toolbar: search + sort -->
    ${notesList.length > 0 ? `
    <div class="notes-toolbar">
      <div class="notes-search">
        <i class="fas fa-search"></i>
        <input type="text" id="notesSearchInput" placeholder="Zoeken in notities..." />
      </div>
      <div class="notes-sort">
        <label for="notesSortSelect">Sorteren:</label>
        <select id="notesSortSelect">
          <option value="newest">Nieuwste eerst</option>
          <option value="oldest">Oudste eerst</option>
        </select>
      </div>
      <span class="notes-count" id="notesCount">${notesList.length} notitie${notesList.length !== 1 ? 's' : ''}</span>
    </div>
    ` : ''}
    
    <!-- Create note form (collapsible) -->
    <div id="noteFormCard" class="notes-form-card" style="display: none;">
      <h3 style="margin: 0 0 16px 0; font-size: 1.125rem;">Nieuwe notitie</h3>
      <form id="noteForm">
        <div class="form-group">
          <label for="noteTitle">Titel <span class="required">*</span></label>
          <input type="text" id="noteTitle" name="title" required placeholder="Titel van de notitie" />
        </div>
        <div class="form-group">
          <label for="noteContent">Inhoud</label>
          <textarea id="noteContent" name="content" rows="4" placeholder="Schrijf je notitie hier..."></textarea>
        </div>
        <div class="form-actions">
          <button type="button" id="cancelNoteBtn" class="btn-secondary">Annuleren</button>
          <button type="submit" class="btn-primary">
            <i class="fas fa-save"></i> Opslaan
          </button>
        </div>
      </form>
    </div>
    
    <!-- Notes list -->
    <div class="notes-list" id="notesListContainer">
      ${notesList.length > 0 ? notesList.map(n => {
        const isEdited = n.updated_at && n.created_at && Math.abs(new Date(n.updated_at).getTime() - new Date(n.created_at).getTime()) > 2000;
        return `
        <div class="note-card" data-note-id="${n.id}" data-note-title="${(n.title || '').replace(/&/g,'&amp;').replace(/"/g,'&quot;').replace(/</g,'&lt;').replace(/>/g,'&gt;')}" data-note-content="${(n.content || '').replace(/&/g,'&amp;').replace(/"/g,'&quot;').replace(/</g,'&lt;').replace(/>/g,'&gt;').replace(new RegExp('\\n','g'),'&#10;')}">
          <div class="note-card-header">
            <h3 class="note-title">${(n.title || '').replace(/</g, '&lt;').replace(/>/g, '&gt;')}</h3>
            <span class="note-date">${formatDate(n.created_at)}${isEdited ? ' · <span class="note-updated">bijgewerkt ' + formatDate(n.updated_at) + '</span>' : ''}</span>
          </div>
          ${n.content ? `<div class="note-content">${(n.content || '').replace(/</g, '&lt;').replace(/>/g, '&gt;').replace(new RegExp('\\n', 'g'), '<br>')}</div>` : '<div class="note-content note-content-empty">Geen inhoud</div>'}
          <div class="note-card-actions">
            <button type="button" class="btn-note-edit" data-note-id="${n.id}" title="Bewerken"><i class="fas fa-pen"></i></button>
            <button type="button" class="btn-note-delete" data-note-id="${n.id}" title="Verwijderen"><i class="fas fa-trash"></i></button>
          </div>
        </div>
      `}).join('') : `
        <div class="notes-empty" id="notesEmpty">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" style="width: 48px; height: 48px; color: #9ca3af; margin-bottom: 16px;">
            <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
            <polyline points="14 2 14 8 20 8"></polyline>
            <line x1="16" y1="13" x2="8" y2="13"></line>
            <line x1="16" y1="17" x2="8" y2="17"></line>
          </svg>
          <p style="color: #6b7280; margin: 0;">Nog geen notities. Klik op "Nieuwe notitie" om te beginnen.</p>
          <button type="button" id="emptyStateNewNoteBtn" class="btn-primary" style="margin-top: 20px;"><i class="fas fa-plus"></i> Eerste notitie aanmaken</button>
        </div>
      `}
      <div class="notes-search-empty" id="notesSearchEmpty" style="display: none;">
        <i class="fas fa-search" style="font-size: 32px; color: #9ca3af; margin-bottom: 12px;"></i>
        <p style="margin: 0; color: #6b7280;">Geen notities gevonden voor "<span id="notesSearchQuery"></span>"</p>
        <p style="margin: 8px 0 0 0; font-size: 13px; color: #9ca3af;">Probeer een andere zoekterm</p>
      </div>
    </div>
  </div>
  
  <script>window.__NOTES__=JSON.parse(atob("${notesB64}"));</script>
  
  <!-- Edit note modal -->
  <div id="noteEditModal" class="note-modal" style="display: none;">
    <div class="note-modal-backdrop"></div>
    <div class="note-modal-content">
      <div class="note-modal-header">
        <h3>Notitie bewerken</h3>
        <button type="button" class="note-modal-close" aria-label="Sluiten">&times;</button>
      </div>
      <form id="noteEditForm">
        <input type="hidden" id="noteEditId" name="id" />
        <div class="form-group">
          <label for="noteEditTitle">Titel <span class="required">*</span></label>
          <input type="text" id="noteEditTitle" name="title" required placeholder="Titel van de notitie" />
        </div>
        <div class="form-group">
          <label for="noteEditContent">Inhoud</label>
          <textarea id="noteEditContent" name="content" rows="6" placeholder="Schrijf je notitie hier..."></textarea>
        </div>
        <div class="form-actions">
          <button type="button" id="noteEditCancel" class="btn-secondary">Annuleren</button>
          <button type="button" id="noteEditDelete" class="btn-danger"><i class="fas fa-trash"></i> Verwijderen</button>
          <button type="submit" class="btn-primary"><i class="fas fa-save"></i> Opslaan</button>
        </div>
      </form>
    </div>
  </div>
  
  <style>
