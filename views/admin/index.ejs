                var title = (t.title || 'Taak').substring(0, 45) + (t.title && t.title.length > 45 ? '‚Ä¶' : '');
                var status = t.status || 'open';
                var prio = (t.priority === 'urgent' || t.priority === 'high') ? ' <span class="employee-prio-badge">' + (t.priority || '') + '</span>' : '';
                return '<li class="employee-list-li"><a href="/admin/tasks/' + t.id + '" class="employee-list-link">' + title + '</a>' + prio + ' <span class="employee-list-meta">' + status + '</span></li>';
              }).join('') + '</ul>';
            }
          }

          if (ticketsListEl) {
