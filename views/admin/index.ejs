<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
  // --- Adaptive dashboard: view selector + employee dashboard data ---
  (function() {
    function onDashboardViewChange() {
      const v = this.value;
      window.location = v ? '/admin?for=' + encodeURIComponent(v) : '/admin';
    }
    const viewSelect = document.getElementById('dashboardViewSelect');
    const viewSelectEmployee = document.getElementById('dashboardViewSelectEmployee');
    if (viewSelect) viewSelect.addEventListener('change', onDashboardViewChange);
    if (viewSelectEmployee) viewSelectEmployee.addEventListener('change', onDashboardViewChange);

    const employeeBlock = document.getElementById('dashboard-employee');
    const employeeId = employeeBlock?.getAttribute('data-employee-id');
    if (employeeBlock && employeeId) {
      (async function loadEmployeeDashboard() {
        const tasksListEl = document.getElementById('employee-tasks-list');
