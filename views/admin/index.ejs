              ticketsListEl.innerHTML = '<ul class="employee-list-ul">' + tickets.slice(0, 8).map(function(t) {
                var subj = (t.subject || 'Ticket').substring(0, 45) + (t.subject && t.subject.length > 45 ? '‚Ä¶' : '');
                var prio = (t.priority === 'urgent' || t.priority === 'high') ? ' <span class="employee-prio-badge">' + (t.priority || '') + '</span>' : '';
                return '<li class="employee-list-li"><a href="/admin/tickets/' + t.id + '" class="employee-list-link">' + subj + '</a>' + prio + ' <span class="employee-list-meta">' + (t.status || '') + '</span></li>';
              }).join('') + '</ul>';
            }
          }

          var weekLabels = [];
          var weekMinutes = [0, 0, 0, 0];
          var now = new Date();
          var baseMonday = new Date(now);
          var day = baseMonday.getDay();
          var diff = baseMonday.getDate() - day + (day === 0 ? -6 : 1);
          baseMonday.setDate(diff);
          baseMonday.setHours(0,0,0,0);
          for (var w = 0; w < 4; w++) {
            var monday = new Date(baseMonday);
            monday.setDate(monday.getDate() - (3 - w) * 7);
            weekLabels.push('Wk ' + (monday.getMonth() + 1) + '/' + monday.getDate());
          }
          entries.forEach(function(e) {
            var start = new Date(e.start_at);
            var weekStart = new Date(start);
            var d = weekStart.getDay();
            var mon = weekStart.getDate() - d + (d === 0 ? -6 : 1);
            weekStart.setDate(mon);
            weekStart.setHours(0,0,0,0);
            var weeksAgo = Math.round((baseMonday - weekStart) / (7 * 24 * 60 * 60 * 1000));
            var idx = 3 - weeksAgo;
            if (idx >= 0 && idx <= 3) {
              weekMinutes[idx] = (weekMinutes[idx] || 0) + (e.duration_minutes || 0);
            }
          });
          var canvas = document.getElementById('employee-hours-chart');
          if (canvas && typeof Chart !== 'undefined') {
            new Chart(canvas, {
              type: 'bar',
              data: {
                labels: weekLabels,
                datasets: [{
                  label: 'Uren',
                  data: weekMinutes.map(function(m) { return Math.round(m / 60 * 10) / 10; }),
                  backgroundColor: 'rgba(234, 93, 13, 0.2)',
                  borderColor: '#ea5d0d',
                  borderWidth: 1
                }]
              },
              options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: { legend: { display: false } },
                scales: {
                  y: { beginAtZero: true, title: { display: true, text: 'Uren' } },
                  x: { grid: { display: false } }
                }
              }
            });
          }
        } catch (e) {
          console.error('Employee dashboard load error:', e);
          if (tasksListEl) tasksListEl.innerHTML = '<p class="text-muted employee-list-empty">Kon niet laden.</p>';
          if (ticketsListEl) ticketsListEl.innerHTML = '<p class="text-muted employee-list-empty">Kon niet laden.</p>';
          if (kpiTasks) kpiTasks.textContent = '‚Äî';
          if (kpiTickets) kpiTickets.textContent = '‚Äî';
          if (kpiHours) kpiHours.textContent = '‚Äî';
          if (kpiUrgent) kpiUrgent.textContent = '‚Äî';
        }
      })();
    }
  })();

  // Wait for both DOM and Chart.js to be ready
  function initCharts() {
