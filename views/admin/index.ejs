                    backgroundColor: 'rgba(234, 88, 13, 0.7)',
                    borderColor: 'rgba(234, 88, 13, 1)',
                    borderWidth: 1,
                    borderRadius: 4,
                    barThickness: 'flex',
                    maxBarThickness: 40,
