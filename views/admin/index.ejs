                  ...(compareData && compareLabel ? [{
                    label: compareLabel,
                    data: compareData,
                    backgroundColor: 'rgba(234, 88, 13, 0.25)',
                    borderColor: 'rgba(234, 88, 13, 0.35)',
                    borderWidth: 1,
                    borderRadius: 4,
                    barThickness: 'flex',
                    maxBarThickness: 40,
                  }] : [])
                  ]
                },
                options: {
                  responsive: true,
                  maintainAspectRatio: false,
                  animation: false,
                  scales: {
                    y: {
                      beginAtZero: true,
                      grid: {
                        display: true,
                        color: 'rgba(0, 0, 0, 0.05)'
                      },
                      ticks: {
                        stepSize: 1
                      }
                    },
                    x: {
                      grid: {
                        display: false
                      }
                    }
