            fetch('/admin/api/admin/tickets?assignee=' + encodeURIComponent(employeeId) + '&pageSize=20&sort=-last_activity_at', { credentials: 'same-origin' }),
            fetch('/api/employees/' + encodeURIComponent(employeeId) + '/time-entries/week', { credentials: 'same-origin' }),
            fetch('/api/employees/' + encodeURIComponent(employeeId) + '/time-entries?start_date=' + startISO + '&end_date=' + endISO + '&limit=200', { credentials: 'same-origin' })
          ]);

          const tasksData = tasksRes.ok ? await tasksRes.json() : null;
          const ticketsData = ticketsRes.ok ? await ticketsRes.json() : null;
          const timeWeekData = timeWeekRes.ok ? await timeWeekRes.json() : null;
          const timeRangeData = timeRangeRes.ok ? await timeRangeRes.json() : null;

          var tasks = (tasksData?.data?.tasks || tasksData?.tasks || []);
          var tickets = (ticketsData?.tickets || []);
          var entries = (timeRangeData?.data?.time_entries || timeRangeData?.time_entries || []);

          if (kpiTasks) kpiTasks.textContent = tasks.length;
          if (kpiTickets) kpiTickets.textContent = tickets.length;

          var totals = timeWeekData?.data?.totals?.total || timeWeekData?.totals?.total;
          var totalMins = totals?.minutes ?? 0;
          var h = Math.floor(totalMins / 60);
          var m = totalMins % 60;
          var hoursStr = (h > 0 ? h + ' u ' : '') + (m > 0 ? m + ' min' : (h === 0 ? '0 min' : ''));
          if (kpiHours) kpiHours.textContent = hoursStr;

          var urgentCount = 0;
          tickets.forEach(function(t) { if (t.priority === 'urgent' || t.priority === 'high') urgentCount++; });
          tasks.forEach(function(t) { if (t.priority === 'urgent' || t.priority === 'high') urgentCount++; });
          if (kpiUrgent) kpiUrgent.textContent = urgentCount;

          if (tasksListEl) {
            if (tasks.length === 0) {
