<!-- Google Ads Account Management Section -->
<div class="mb-6">
  <div style="padding: 16px; border-bottom: 1px solid #e5e7eb; display: flex; align-items: center; justify-content: space-between; background: white; border-radius: 8px 8px 0 0;">
    <div>
      <h3 style="font-size: 18px; font-weight: 500; color: #111827; margin: 0;">Google Ads Accounts</h3>
