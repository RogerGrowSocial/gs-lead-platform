<!-- AI Recommendation Drawer (Side Panel) -->
<div id="ai-recommendation-drawer-backdrop" class="ai-drawer-backdrop"></div>
<div id="ai-recommendation-drawer" class="ai-drawer">
  <div class="ai-drawer-content">
    <!-- Header -->
    <div class="ai-drawer-header">
      <div class="ai-drawer-header-left">
        <div>
          <h3 class="ai-drawer-title" id="modal-title">AI-acties voor <span id="modal-segment-name"></span></h3>
          <p class="ai-drawer-subtitle">Gebaseerd op leadtekort, CPL en segmentcapaciteit.</p>
        </div>
      </div>
      <button type="button" class="ai-drawer-close" onclick="closeAiRecommendationDrawer()">
        <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>

    <!-- Content -->
    <div class="ai-drawer-body">
      <!-- Sectie 1: Samenvatting -->
      <div class="bg-gray-50 border border-gray-200 rounded-lg p-6 mb-6">
        <h4 class="text-sm font-medium text-gray-900 mb-3">Samenvatting</h4>
        <p class="text-sm text-gray-700 mb-4" id="modal-summary"></p>
        <div class="flex flex-wrap gap-2">
          <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-white border border-gray-200 text-gray-700">
            Lead gap: <span class="ml-1 font-semibold" id="modal-lead-gap"></span>
          </span>
          <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-white border border-gray-200 text-gray-700">
            Huidige CPL: <span class="ml-1 font-semibold" id="modal-current-cpl"></span>
          </span>
          <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-white border border-gray-200 text-gray-700">
            Target CPL: <span class="ml-1 font-semibold" id="modal-target-cpl"></span>
          </span>
        </div>
      </div>

      <!-- Sectie 2: Landingspagina voorstel -->
      <div class="bg-white border border-gray-200 rounded-lg p-6 mb-6" id="modal-lp-section">
        <h4 class="text-base font-medium text-gray-900 mb-4">Voorstel nieuwe landingspagina</h4>
        
        <div class="space-y-4">
          <div>
            <label class="block text-xs font-medium text-gray-500 mb-1">URL-voorstel</label>
            <div class="bg-gray-50 border border-gray-200 rounded px-3 py-2 text-sm text-gray-700 font-mono" id="modal-lp-url"></div>
          </div>

          <div>
            <label class="block text-xs font-medium text-gray-500 mb-1">H1-voorstel</label>
            <div class="bg-gray-50 border border-gray-200 rounded px-3 py-2 text-sm text-gray-900 font-medium" id="modal-lp-h1"></div>
          </div>

          <div>
            <label class="block text-xs font-medium text-gray-500 mb-1">Subheadline</label>
            <div class="bg-gray-50 border border-gray-200 rounded px-3 py-2 text-sm text-gray-700" id="modal-lp-subheadline"></div>
          </div>

          <div>
            <label class="block text-xs font-medium text-gray-500 mb-2">Opbouw</label>
            <ul class="space-y-1 text-sm text-gray-700">
              <li class="flex items-start">
                <svg class="h-5 w-5 text-gray-400 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
                Waarom klanten hier zoeken
              </li>
              <li class="flex items-start">
                <svg class="h-5 w-5 text-gray-400 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
                Wat jouw platform doet
              </li>
              <li class="flex items-start">
                <svg class="h-5 w-5 text-gray-400 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
                Voordelen (snel, eerlijk, lokaal)
              </li>
              <li class="flex items-start">
                <svg class="h-5 w-5 text-gray-400 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
                Duidelijke CTA-blokken
              </li>
            </ul>
          </div>
        </div>

        <div class="mt-6 flex gap-3">
          <button 
            id="modal-approve-lp-btn"
            onclick="approveRecommendationFromModal()"
            class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-gray-900 hover:bg-gray-800"
          >
            Goedkeuren
          </button>
          <button 
            id="modal-reject-lp-btn"
            onclick="rejectRecommendationFromModal()"
            class="inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50"
          >
            Afwijzen
          </button>
        </div>
      </div>

      <!-- Sectie 3: Google Ads voorstel -->
      <div class="bg-white border border-gray-200 rounded-lg p-6 mb-6" id="modal-ads-section">
        <!-- Campaign Creation Section (create_campaign) -->
        <div id="modal-ads-campaign-creation" style="display: none;">
          <h4 class="text-base font-medium text-gray-900 mb-4">Voorstel nieuwe Google Ads Campagne</h4>
          
          <div class="space-y-4">
            <div>
              <label class="block text-xs font-medium text-gray-500 mb-1">Campagne naam</label>
              <div class="bg-gray-50 border border-gray-200 rounded px-3 py-2 text-sm text-gray-700 font-mono" id="modal-ads-campaign-name"></div>
            </div>

            <div class="grid grid-cols-2 gap-4">
              <div>
                <label class="block text-xs font-medium text-gray-500 mb-1">Dagelijks budget</label>
                <div class="bg-gray-50 border border-gray-200 rounded px-3 py-2 text-sm text-gray-900 font-semibold" id="modal-ads-daily-budget"></div>
              </div>
              <div>
                <label class="block text-xs font-medium text-gray-500 mb-1">Campagne type</label>
                <div class="bg-gray-50 border border-gray-200 rounded px-3 py-2 text-sm text-gray-700" id="modal-ads-campaign-type"></div>
              </div>
            </div>

            <div>
              <label class="block text-xs font-medium text-gray-500 mb-1">Target locaties</label>
              <div class="flex flex-wrap gap-2" id="modal-ads-target-locations"></div>
            </div>

            <div>
              <label class="block text-xs font-medium text-gray-500 mb-1">Landing page URL</label>
              <div class="bg-gray-50 border border-gray-200 rounded px-3 py-2 text-sm text-blue-600 break-all" id="modal-ads-landing-page-url"></div>
            </div>

            <div class="bg-green-50 border border-green-200 rounded-lg p-4">
              <div class="flex items-start">
                <svg class="h-5 w-5 text-green-600 mr-2 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <div class="text-sm text-green-800">
                  <p class="font-medium mb-1">Automatisering:</p>
                  <p>De campagne wordt automatisch aangemaakt met keywords, ad groups en ads. Start direct actief en is klaar om leads te genereren.</p>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- AdGroup Section (increase_campaign_budget) -->
        <div id="modal-ads-adgroup-section" style="display: none;">
          <h4 class="text-base font-medium text-gray-900 mb-4">Voorstel nieuwe Google Ads AdGroup</h4>
          
          <div class="space-y-4">
            <div class="grid grid-cols-2 gap-4">
              <div>
                <label class="block text-xs font-medium text-gray-500 mb-1">Campaign name</label>
                <div class="bg-gray-50 border border-gray-200 rounded px-3 py-2 text-sm text-gray-700 font-mono" id="modal-ads-campaign"></div>
              </div>
              <div>
                <label class="block text-xs font-medium text-gray-500 mb-1">AdGroup name</label>
                <div class="bg-gray-50 border border-gray-200 rounded px-3 py-2 text-sm text-gray-700 font-mono" id="modal-ads-adgroup"></div>
              </div>
            </div>

            <div>
              <label class="block text-xs font-medium text-gray-500 mb-2">Voorgestelde keywords</label>
              <div class="flex flex-wrap gap-2" id="modal-ads-keywords"></div>
            </div>

            <div>
              <label class="block text-xs font-medium text-gray-500 mb-2">Negatieve keywords</label>
              <div class="flex flex-wrap gap-2" id="modal-ads-negative-keywords"></div>
            </div>

            <div>
              <label class="block text-xs font-medium text-gray-500 mb-3">Ads-voorstellen</label>
              <div class="space-y-4" id="modal-ads-previews"></div>
            </div>
          </div>
        </div>

        <div class="mt-6 flex gap-3">
          <button 
            id="modal-approve-ads-btn"
            onclick="approveRecommendationFromModal()"
            class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-gray-900 hover:bg-gray-800"
          >
            Goedkeuren
          </button>
          <button 
            id="modal-reject-btn"
            onclick="rejectRecommendationFromModal()"
            class="inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50"
          >
            Afwijzen
          </button>
        </div>
      </div>

      <!-- Sectie 4: Feedback -->
      <div class="bg-gray-50 border border-gray-200 rounded-lg p-6">
        <h4 class="text-sm font-medium text-gray-900 mb-3">AI-feedback</h4>
        <div class="mb-4">
          <textarea 
            id="modal-feedback-text"
            class="w-full rounded-md border-gray-300 text-sm p-4" 
            rows="4" 
            placeholder="Waarom accepteer of wijs je deze aanbeveling af?"
          ></textarea>
        </div>
        <button 
          id="modal-save-feedback-btn"
          onclick="saveFeedbackFromModal()"
          class="inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50"
        >
          Feedback opslaan
        </button>
      </div>
    </div>
  </div>
</div>
