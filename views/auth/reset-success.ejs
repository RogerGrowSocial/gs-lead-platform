<!DOCTYPE html>
<html>
<head>
  <title>Wachtwoord ingesteld</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/resetSuccess.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
  <div class="success-container success-animation">
    <div class="logo-container">
      <!-- Vervang dit door je eigen logo -->
      <img src="/img/favicon.png" alt="Logo">
    </div>
    
    <div class="success-icon">
      <i class="fas fa-check checkmark-animation"></i>
    </div>
    
    <h1 class="success-title">Wachtwoord succesvol ingesteld!</h1>
    <p class="success-message">Je wachtwoord is bijgewerkt. Je kunt nu inloggen met je nieuwe wachtwoord.</p>
    
    <a href="/login" class="btn-primary">
      <i class="fas fa-sign-in-alt"></i> Ga naar inloggen
    </a>
    
    <p class="redirect-info">
      Je wordt automatisch doorgestuurd in <span class="redirect-timer" id="timer">5</span> seconden
    </p>
  </div>
  
  <script>
    // Countdown timer
    let timeLeft = 5;
    const timerElement = document.getElementById('timer');
    
    const countdownTimer = setInterval(function() {
      timeLeft--;
      
      if (timerElement) {
        timerElement.textContent = timeLeft;
      }
      
      if (timeLeft <= 0) {
        clearInterval(countdownTimer);
        window.location.href = '/login';
      }
    }, 1000);
  </script>
</body>
</html>

