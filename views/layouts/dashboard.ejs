      padding: 8px 0;
      border-top: 1px solid var(--sidebar-border);
      border-bottom: 1px solid var(--sidebar-border);
    }
    
    .support-link {
      display: flex;
      align-items: center;
      height: 40px;
      margin: 0 12px;
      color: #9ca3af;
      text-decoration: none;
      transition: color 200ms ease-in-out;
    }
    
