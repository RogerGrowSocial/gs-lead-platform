      width: auto;
    }
    
    .nav-section {
      flex: 1;
      padding: 24px 0 0 0;
      overflow-y: auto;
    }
    
    .menu-item {
      display: flex;
      align-items: center;
      height: 48px;
      margin: 0 12px 4px 12px;
      border-radius: 12px;
      cursor: pointer;
      color: var(--sidebar-foreground);
      text-decoration: none;
      transition: background 200ms ease-in-out;
    }
    
    .menu-item:hover {
      background: var(--sidebar-hover);
      text-decoration: none;
    }
    
    .menu-item.active {
      background: var(--sidebar-active);
      color: var(--sidebar-active-fg);
    }
    
    .icon-container {
      width: 56px;
      height: 48px;
      display: flex;
      align-items: center;
      justify-content: center;
      flex-shrink: 0;
    }
    
    .menu-item svg {
