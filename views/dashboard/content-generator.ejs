  function editPostCaption(postId) {
    const newCaption = prompt('Edit caption:');
    if (newCaption) {
      fetch(`/dashboard/api/content-generator/posts/${postId}`, {
        method: 'PUT',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ caption: newCaption }),
        credentials: 'include'
      })
        .then(res => res.json())
        .then(data => {
          if (data.success) {
            location.reload();
          } else {
            alert(data.error || 'Error updating caption');
          }
        });
    }
  }
  
  function savePost(postId) {
    fetch(`/dashboard/api/content-generator/posts/${postId}`, {
      method: 'PUT',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ status: 'draft' }),
      credentials: 'include'
    })
      .then(res => res.json())
      .then(data => {
        if (data.success) {
          alert('Post saved!');
        } else {
          alert(data.error || 'Error saving post');
        }
      });
  }
