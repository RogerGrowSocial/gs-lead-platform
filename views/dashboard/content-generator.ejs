<%
var brands = typeof brands !== 'undefined' ? brands : [];
var templates = typeof templates !== 'undefined' ? templates : [];
%>

<style>
  .content-generator-container {
    max-width: 1400px;
    margin: 0 auto;
  }
  
  .tab-navigation {
    display: flex;
    gap: 8px;
    border-bottom: 2px solid #e5e7eb;
    margin-bottom: 24px;
  }
  
  .tab-button {
    padding: 12px 24px;
    background: none;
    border: none;
    border-bottom: 2px solid transparent;
    cursor: pointer;
    font-size: 14px;
    font-weight: 500;
    color: #6b7280;
    transition: all 0.2s;
    margin-bottom: -2px;
  }
  
  .tab-button:hover {
    color: #111827;
  }
  
  .tab-button.active {
    color: #EA5d0d;
    border-bottom-color: #EA5d0d;
  }
  
  .tab-content {
    display: none;
  }
  
  .tab-content.active {
    display: block;
  }
  
  /* Brands Tab */
  .brands-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 20px;
    margin-bottom: 24px;
  }
  
  .brand-card {
    border: 1px solid #e5e7eb;
    border-radius: 12px;
    padding: 20px;
    background: white;
    transition: box-shadow 0.2s;
  }
  
  .brand-card:hover {
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }
  
  .brand-header {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 16px;
  }
  
  .brand-logo {
    width: 48px;
    height: 48px;
    border-radius: 8px;
    object-fit: cover;
    background: #f3f4f6;
  }
  
  .brand-info h3 {
    margin: 0;
    font-size: 16px;
    font-weight: 600;
    color: #111827;
  }
  
  .brand-info p {
    margin: 4px 0 0 0;
    font-size: 14px;
    color: #6b7280;
  }
  
  .brand-details {
    display: flex;
    flex-wrap: wrap;
    gap: 12px;
    margin-bottom: 16px;
  }
  
  .brand-detail {
    display: flex;
    align-items: center;
    gap: 6px;
    font-size: 13px;
    color: #6b7280;
  }
  
  .color-swatch {
    width: 20px;
    height: 20px;
    border-radius: 4px;
    border: 1px solid #e5e7eb;
  }
  
  .brand-actions {
    display: flex;
    gap: 8px;
  }
  
  .btn {
    padding: 8px 16px;
    border-radius: 6px;
    border: none;
    cursor: pointer;
    font-size: 14px;
    font-weight: 500;
    transition: all 0.2s;
  }
  
  .btn-primary {
    background: #EA5d0d;
    color: white;
  }
  
  .btn-primary:hover {
    background: #d14d0b;
  }
  
  .btn-secondary {
    background: #f3f4f6;
    color: #111827;
  }
  
  .btn-secondary:hover {
    background: #e5e7eb;
  }
  
  .btn-add-brand {
    margin-bottom: 24px;
  }
  
  /* Generator Tab */
  .generator-layout {
    display: grid;
    grid-template-columns: 400px 1fr;
    gap: 24px;
  }
  
  .generator-form {
    background: white;
    border: 1px solid #e5e7eb;
    border-radius: 12px;
    padding: 24px;
  }
  
  .form-group {
    margin-bottom: 20px;
  }
  
  .form-group label {
    display: block;
    margin-bottom: 8px;
    font-size: 14px;
    font-weight: 500;
    color: #111827;
  }
  
  .form-group select,
  .form-group input[type="text"],
  .form-group textarea {
    width: 100%;
    padding: 10px 12px;
    border: 1px solid #d1d5db;
    border-radius: 6px;
    font-size: 14px;
  }
  
  .form-group select:focus,
  .form-group input:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: #EA5d0d;
    box-shadow: 0 0 0 3px rgba(234, 93, 13, 0.1);
  }
  
  .image-upload-area {
    border: 2px dashed #d1d5db;
    border-radius: 8px;
    padding: 24px;
    text-align: center;
    cursor: pointer;
    transition: all 0.2s;
  }
  
  .image-upload-area:hover {
    border-color: #EA5d0d;
    background: #fef5f0;
  }
  
  .image-thumbnails {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(80px, 1fr));
    gap: 12px;
    margin-top: 16px;
  }
  
  .image-thumbnail {
    position: relative;
    aspect-ratio: 1;
    border-radius: 8px;
    overflow: hidden;
  }
  
  .image-thumbnail img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .image-thumbnail .remove {
    position: absolute;
    top: 4px;
    right: 4px;
    width: 24px;
    height: 24px;
    background: rgba(0, 0, 0, 0.7);
    color: white;
    border: none;
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .results-list {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }
  
  .result-card {
    border: 1px solid #e5e7eb;
    border-radius: 12px;
    padding: 20px;
    background: white;
  }
  
  .result-header {
    display: flex;
    justify-content: space-between;
    align-items: start;
    margin-bottom: 12px;
  }
  
  .result-title {
    font-size: 16px;
    font-weight: 600;
    color: #111827;
    margin: 0;
  }
  
  .result-actions {
    display: flex;
    gap: 8px;
  }
  
  .result-caption {
    color: #4b5563;
    font-size: 14px;
    line-height: 1.6;
    margin-bottom: 12px;
  }
  
  .result-meta {
    display: flex;
    gap: 16px;
    font-size: 12px;
    color: #6b7280;
  }
  
  .empty-state {
    text-align: center;
    padding: 60px 20px;
    color: #6b7280;
  }
  
  .empty-state svg {
    width: 64px;
    height: 64px;
    margin-bottom: 16px;
    opacity: 0.5;
  }
  
  /* Modal */
  .modal {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.5);
    z-index: 1000;
    align-items: center;
    justify-content: center;
  }
  
  .modal.active {
    display: flex;
  }
  
  .modal-content {
    background: white;
    border-radius: 12px;
    padding: 24px;
    max-width: 600px;
    width: 90%;
    max-height: 90vh;
    overflow-y: auto;
  }
  
  .modal-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 24px;
  }
  
  .modal-header h2 {
    margin: 0;
    font-size: 20px;
    font-weight: 600;
  }
  
  .close-modal {
    background: none;
    border: none;
    font-size: 24px;
    cursor: pointer;
    color: #6b7280;
  }
</style>

<div class="content-generator-container">
  <div class="tab-navigation">
    <button class="tab-button active" data-tab="brands">Brands</button>
    <button class="tab-button" data-tab="generator">Generator</button>
  </div>
  
  <!-- Brands Tab -->
  <div class="tab-content active" id="brands-tab">
    <button class="btn btn-primary btn-add-brand" onclick="openBrandModal()">+ Add brand</button>
    
    <% if (brands.length === 0) { %>
      <div class="empty-state">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
          <polyline points="14 2 14 8 20 8"></polyline>
        </svg>
        <h3>No brands yet</h3>
        <p>Create your first brand to start generating content</p>
      </div>
    <% } else { %>
      <div class="brands-grid">
        <% brands.forEach(function(brand) { %>
          <div class="brand-card">
            <div class="brand-header">
              <% if (brand.logo_path) { %>
                <img src="<%= brand.logo_path %>" alt="<%= brand.name %>" class="brand-logo">
              <% } else { %>
                <div class="brand-logo" style="display: flex; align-items: center; justify-content: center; color: #6b7280;">
                  <i class="fas fa-image"></i>
                </div>
              <% } %>
              <div class="brand-info">
                <h3><%= brand.name %></h3>
                <p><%= brand.customers?.name || brand.customers?.company_name || 'No customer' %></p>
              </div>
            </div>
            <div class="brand-details">
              <div class="brand-detail">
                <span>Industry:</span>
                <strong><%= brand.industry %></strong>
              </div>
              <div class="brand-detail">
                <span>Color:</span>
                <div class="color-swatch" style="background-color: <%= brand.primary_color %>;"></div>
              </div>
            </div>
            <div class="brand-actions">
              <button class="btn btn-primary" onclick="editBrand('<%= brand.id %>')">Edit</button>
              <button class="btn btn-secondary" onclick="deleteBrand('<%= brand.id %>')">Delete</button>
            </div>
          </div>
        <% }); %>
      </div>
    <% } %>
  </div>
  
  <!-- Generator Tab -->
  <div class="tab-content" id="generator-tab">
    <% if (brands.length === 0) { %>
      <div class="empty-state">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
          <polyline points="14 2 14 8 20 8"></polyline>
        </svg>
        <h3>No brands available</h3>
        <p>Create a brand first to generate content</p>
        <button class="btn btn-primary" style="margin-top: 16px;" onclick="switchToBrandsTab()">Go to Brands</button>
      </div>
    <% } else { %>
      <div class="generator-layout">
        <div class="generator-form">
          <div class="form-group">
            <label>Select Brand *</label>
            <select id="selectedBrand" required>
              <option value="">Choose a brand...</option>
              <% brands.forEach(function(brand) { %>
                <option value="<%= brand.id %>"><%= brand.name %></option>
              <% }); %>
            </select>
          </div>
          
          <div class="form-group">
            <label>Platform</label>
            <select id="selectedPlatform">
              <option value="ig">Instagram</option>
              <option value="fb">Facebook</option>
              <option value="li">LinkedIn</option>
            </select>
          </div>
          
          <div class="form-group">
            <label>Format</label>
            <select id="selectedFormat">
              <option value="square">Square (1:1)</option>
              <option value="portrait">Portrait (4:5)</option>
            </select>
          </div>
          
          <div class="form-group">
            <label>Template</label>
            <select id="selectedTemplate">
              <% templates.forEach(function(template) { %>
                <option value="<%= template.key %>"><%= template.name %></option>
              <% }); %>
            </select>
          </div>
          
          <div class="form-group">
            <label>Upload Images (up to 10)</label>
            <div class="image-upload-area" onclick="document.getElementById('imageUpload').click()">
              <i class="fas fa-cloud-upload-alt" style="font-size: 32px; color: #6b7280; margin-bottom: 8px;"></i>
              <p style="margin: 0; color: #6b7280;">Click to upload images</p>
            </div>
            <input type="file" id="imageUpload" multiple accept="image/*" style="display: none;" onchange="handleImageUpload(event)">
            <div class="image-thumbnails" id="imageThumbnails"></div>
          </div>
          
          <div class="form-group">
            <label>Topic</label>
            <input type="text" id="topic" placeholder="e.g., Summer sale, New product launch">
          </div>
          
          <div class="form-group">
            <label>Offer / CTA (optional)</label>
            <input type="text" id="cta" placeholder="e.g., 20% off, Free consultation">
          </div>
          
          <div class="form-group">
            <label>Extra Notes (optional)</label>
            <textarea id="notes" rows="3" placeholder="Additional context..."></textarea>
          </div>
          
          <button class="btn btn-primary" style="width: 100%;" onclick="generateContent()">Generate</button>
        </div>
        
        <div>
          <h3 style="margin-bottom: 16px;">Generated Posts</h3>
          <div class="results-list" id="resultsList">
            <div class="empty-state">
              <p>Generated posts will appear here</p>
            </div>
          </div>
        </div>
      </div>
    <% } %>
  </div>
</div>

<!-- Brand Modal -->
<div class="modal" id="brandModal">
  <div class="modal-content">
    <div class="modal-header">
      <h2 id="modalTitle">Add Brand</h2>
      <button class="close-modal" onclick="closeBrandModal()">&times;</button>
    </div>
    <form id="brandForm" onsubmit="saveBrand(event)">
      <div class="form-group">
        <label>Brand Name *</label>
        <input type="text" id="brandName" required>
      </div>
      
      <div class="form-group">
        <label>Link to Customer *</label>
        <select id="brandCustomer" required>
          <option value="">Loading customers...</option>
        </select>
      </div>
      
      <div class="form-group">
        <label>Industry *</label>
        <input type="text" id="brandIndustry" required placeholder="e.g., Retail, Services, Technology">
      </div>
      
      <div class="form-group">
        <label>Primary Color *</label>
        <div style="display: flex; gap: 8px; align-items: center;">
          <input type="color" id="brandPrimaryColor" value="#EA5d0d" required>
          <input type="text" id="brandPrimaryColorHex" value="#EA5d0d" pattern="^#[0-9A-Fa-f]{6}$" required style="flex: 1;">
        </div>
      </div>
      
      <div class="form-group">
        <label>Secondary Color (optional)</label>
        <div style="display: flex; gap: 8px; align-items: center;">
          <input type="color" id="brandSecondaryColor">
          <input type="text" id="brandSecondaryColorHex" pattern="^#[0-9A-Fa-f]{6}$" style="flex: 1;">
        </div>
      </div>
      
      <div class="form-group">
        <label>Logo *</label>
        <input type="file" id="brandLogo" accept="image/*" required>
        <div id="logoPreview" style="margin-top: 12px;"></div>
      </div>
      
      <div style="display: flex; gap: 8px; justify-content: flex-end;">
        <button type="button" class="btn btn-secondary" onclick="closeBrandModal()">Cancel</button>
        <button type="submit" class="btn btn-primary">Save</button>
      </div>
    </form>
  </div>
</div>

<script>
  // Tab switching
  document.querySelectorAll('.tab-button').forEach(btn => {
    btn.addEventListener('click', () => {
      const tab = btn.dataset.tab;
      document.querySelectorAll('.tab-button').forEach(b => b.classList.remove('active'));
      document.querySelectorAll('.tab-content').forEach(c => c.classList.remove('active'));
      btn.classList.add('active');
      document.getElementById(`${tab}-tab`).classList.add('active');
    });
  });
  
  function switchToBrandsTab() {
    document.querySelector('[data-tab="brands"]').click();
  }
  
  // Brand modal
  let editingBrandId = null;
  let uploadedImages = [];
  
  function openBrandModal(brandId = null) {
    editingBrandId = brandId;
    document.getElementById('brandModal').classList.add('active');
    document.getElementById('modalTitle').textContent = brandId ? 'Edit Brand' : 'Add Brand';
    document.getElementById('brandForm').reset();
    document.getElementById('logoPreview').innerHTML = '';
    
    // Load customers
    loadCustomers();
    
    // If editing, load brand data
    if (brandId) {
      loadBrandData(brandId);
    }
  }
  
  function closeBrandModal() {
    document.getElementById('brandModal').classList.remove('active');
    editingBrandId = null;
  }
  
  function loadCustomers() {
    fetch('/dashboard/api/content-generator/customers')
      .then(res => res.json())
      .then(data => {
        const select = document.getElementById('brandCustomer');
        select.innerHTML = '<option value="">Select customer...</option>';
        data.customers.forEach(customer => {
          const option = document.createElement('option');
          option.value = customer.id;
          option.textContent = customer.company_name || customer.name || customer.email;
          select.appendChild(option);
        });
      })
      .catch(err => {
        console.error('Error loading customers:', err);
        alert('Error loading customers');
      });
  }
  
  function loadBrandData(brandId) {
    fetch(`/dashboard/api/content-generator/brands/${brandId}`)
      .then(res => res.json())
      .then(data => {
        if (data.success) {
          const brand = data.brand;
          document.getElementById('brandName').value = brand.name;
          document.getElementById('brandCustomer').value = brand.customer_id;
          document.getElementById('brandIndustry').value = brand.industry;
          document.getElementById('brandPrimaryColor').value = brand.primary_color;
          document.getElementById('brandPrimaryColorHex').value = brand.primary_color;
          if (brand.secondary_color) {
            document.getElementById('brandSecondaryColor').value = brand.secondary_color;
            document.getElementById('brandSecondaryColorHex').value = brand.secondary_color;
          }
          if (brand.logo_path) {
            document.getElementById('logoPreview').innerHTML = `<img src="${brand.logo_path}" style="max-width: 200px; border-radius: 8px;">`;
          }
        }
      })
      .catch(err => {
        console.error('Error loading brand:', err);
        alert('Error loading brand data');
      });
  }
  
  // Color picker sync
  document.getElementById('brandPrimaryColor').addEventListener('input', (e) => {
    document.getElementById('brandPrimaryColorHex').value = e.target.value;
  });
  
  document.getElementById('brandPrimaryColorHex').addEventListener('input', (e) => {
    if (/^#[0-9A-Fa-f]{6}$/.test(e.target.value)) {
      document.getElementById('brandPrimaryColor').value = e.target.value;
    }
  });
  
  document.getElementById('brandSecondaryColor').addEventListener('input', (e) => {
    document.getElementById('brandSecondaryColorHex').value = e.target.value;
  });
  
  document.getElementById('brandSecondaryColorHex').addEventListener('input', (e) => {
    if (/^#[0-9A-Fa-f]{6}$/.test(e.target.value)) {
      document.getElementById('brandSecondaryColor').value = e.target.value;
    }
  });
  
  // Logo preview
  document.getElementById('brandLogo').addEventListener('change', (e) => {
    const file = e.target.files[0];
    if (file) {
      const reader = new FileReader();
      reader.onload = (e) => {
        document.getElementById('logoPreview').innerHTML = `<img src="${e.target.result}" style="max-width: 200px; border-radius: 8px;">`;
      };
      reader.readAsDataURL(file);
    }
  });
  
  function saveBrand(e) {
    e.preventDefault();
    
    const formData = new FormData();
    formData.append('name', document.getElementById('brandName').value);
    formData.append('customer_id', document.getElementById('brandCustomer').value);
    formData.append('industry', document.getElementById('brandIndustry').value);
    formData.append('primary_color', document.getElementById('brandPrimaryColorHex').value);
    const secondaryColor = document.getElementById('brandSecondaryColorHex').value;
    if (secondaryColor) formData.append('secondary_color', secondaryColor);
    
    const logoFile = document.getElementById('brandLogo').files[0];
    if (logoFile) formData.append('logo', logoFile);
    
    const url = editingBrandId 
      ? `/dashboard/api/content-generator/brands/${editingBrandId}`
      : '/dashboard/api/content-generator/brands';
    const method = editingBrandId ? 'PUT' : 'POST';
    
    fetch(url, {
      method,
      body: formData,
      credentials: 'include'
    })
      .then(res => res.json())
      .then(data => {
        if (data.success) {
          closeBrandModal();
          location.reload();
        } else {
          alert(data.error || 'Error saving brand');
        }
      })
      .catch(err => {
        console.error('Error saving brand:', err);
        alert('Error saving brand');
      });
  }
  
  function editBrand(brandId) {
    openBrandModal(brandId);
  }
  
  function deleteBrand(brandId) {
    if (!confirm('Are you sure you want to delete this brand?')) return;
    
    fetch(`/dashboard/api/content-generator/brands/${brandId}`, {
      method: 'DELETE',
      credentials: 'include'
    })
      .then(res => res.json())
      .then(data => {
        if (data.success) {
          location.reload();
        } else {
          alert(data.error || 'Error deleting brand');
        }
      })
      .catch(err => {
        console.error('Error deleting brand:', err);
        alert('Error deleting brand');
      });
  }
  
  // Image upload
  function handleImageUpload(e) {
    const files = Array.from(e.target.files);
    if (uploadedImages.length + files.length > 10) {
      alert('Maximum 10 images allowed');
      return;
    }
    
    files.forEach(file => {
      const reader = new FileReader();
      reader.onload = (e) => {
        uploadedImages.push({
          file,
          preview: e.target.result
        });
        updateImageThumbnails();
      };
      reader.readAsDataURL(file);
    });
  }
  
  function updateImageThumbnails() {
    const container = document.getElementById('imageThumbnails');
    container.innerHTML = uploadedImages.map((img, idx) => `
      <div class="image-thumbnail">
        <img src="${img.preview}" alt="Preview">
        <button class="remove" onclick="removeImage(${idx})">&times;</button>
      </div>
    `).join('');
  }
  
  function removeImage(idx) {
    uploadedImages.splice(idx, 1);
    updateImageThumbnails();
  }
  
  // Generate content
  function generateContent() {
    const brandId = document.getElementById('selectedBrand').value;
    if (!brandId) {
      alert('Please select a brand');
      return;
    }
    
    if (uploadedImages.length === 0) {
      alert('Please upload at least one image');
      return;
    }
    
    const formData = new FormData();
    formData.append('brand_id', brandId);
    formData.append('platform', document.getElementById('selectedPlatform').value);
    formData.append('format', document.getElementById('selectedFormat').value);
    formData.append('template_key', document.getElementById('selectedTemplate').value);
    formData.append('topic', document.getElementById('topic').value);
    formData.append('cta', document.getElementById('cta').value);
    formData.append('notes', document.getElementById('notes').value);
    
    uploadedImages.forEach((img, idx) => {
      formData.append(`images`, img.file);
    });
    
    fetch('/dashboard/api/content-generator/generate', {
      method: 'POST',
      body: formData,
      credentials: 'include'
    })
      .then(res => res.json())
      .then(data => {
        if (data.success) {
          displayResults(data.posts);
        } else {
          alert(data.error || 'Error generating content');
        }
      })
      .catch(err => {
        console.error('Error generating content:', err);
        alert('Error generating content');
      });
  }
  
  function displayResults(posts) {
    const container = document.getElementById('resultsList');
    if (posts.length === 0) {
      container.innerHTML = '<div class="empty-state"><p>No posts generated</p></div>';
      return;
    }
    
    container.innerHTML = posts.map(post => `
      <div class="result-card">
        <div class="result-header">
          <h4 class="result-title">${post.title}</h4>
          <div class="result-actions">
            <button class="btn btn-secondary" onclick="duplicatePost('${post.id}')">Duplicate</button>
            <button class="btn btn-secondary" onclick="editPostCaption('${post.id}')">Edit text</button>
            <button class="btn btn-primary" onclick="savePost('${post.id}')">Save</button>
