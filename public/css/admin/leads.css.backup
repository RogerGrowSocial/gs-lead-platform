  border-radius: var(--radius-lg);
  border-left: 4px solid var(--danger-color);
  box-shadow: 0 2px 4px rgba(239, 68, 68, 0.1);
}

.delete-warning i {
  color: var(--danger-color);
  font-size: 1.5rem;
  margin-right: 1rem;
  margin-top: 0.125rem;
  flex-shrink: 0;
}

.delete-warning p {
  margin: 0;
