/* Edit mode styles */
.detail-value {
  transition: all 0.15s ease-out;
}

.detail-value.editable {
  position: relative;
  cursor: pointer;
  padding: 4px 8px;
  border-radius: 4px;
  border: 1px solid transparent;
  background-color: transparent;
}

.detail-value.editable:hover {
  background-color: #f3f4f6;
  border-color: #e5e7eb;
}

.detail-value.editing {
  padding: 0;
  margin: -4px 0;
  background-color: #f9fafb;
  border-radius: 8px;
  border: 1px solid #e5e7eb;
  box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
  animation: editModeEnter 0.15s ease-out;
}

.detail-value:not(.editing) {
  animation: editModeExit 0.15s ease-out;
}

@keyframes editModeEnter {
  from {
    opacity: 0.8;
    transform: translateY(-2px);
    background-color: transparent;
  }
  to {
    opacity: 1;
    transform: translateY(0);
    background-color: #f9fafb;
  }
}

@keyframes editModeExit {
  from {
    opacity: 0.8;
    transform: translateY(2px);
    background-color: #f9fafb;
  }
  to {
    opacity: 1;
    transform: translateY(0);
    background-color: transparent;
  }
}

.detail-value.editing input,
.detail-value.editing textarea,
.detail-value.editing select {
  width: 100%;
  padding: 12px 16px;
  border: 1px solid #e5e7eb;
