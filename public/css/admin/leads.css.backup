/* Table container styles */
.requests-table-container {
  width: 100%;
  background-color: var(--card-bg);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-sm);
  overflow: hidden;
}

.requests-table-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 1.5rem;
  border-bottom: 1px solid var(--border-color);
  background-color: var(--card-bg);
}

.requests-table {
  width: 100%;
  border-collapse: collapse;
  overflow-x: auto;
}

.requests-table-head {
  background-color: var(--secondary-color);
  border-bottom: 1px solid var(--border-color);
}

.requests-table-body {
  background-color: var(--card-bg);
}

.requests-row {
  display: grid;
  grid-template-columns: 60px 1fr 120px 100px 100px 120px 120px 140px 100px;
  gap: 1rem;
  padding: 1rem 1.5rem;
  border-bottom: 1px solid var(--border-color);
  align-items: center;
  transition: background-color 0.2s ease;
}

.requests-row:hover {
  background-color: var(--secondary-color);
}

.requests-cell {
  display: flex;
  align-items: center;
  font-size: 0.875rem;
  color: var(--text-primary);
}

.checkbox-cell {
  justify-content: center;
}

.request-info-cell {
  gap: 0.75rem;
}

.request-details {
  display: flex;
  align-items: center;
  gap: 0.75rem;
}

.lead-avatar {
  width: 2.5rem;
  height: 2.5rem;
  background-color: var(--primary-color);
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 600;
  font-size: 0.875rem;
  transition: all 0.3s ease;
}

.request-info {
  display: flex;
  flex-direction: column;
}

.request-company {
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 0.25rem;
}

.request-contact {
  font-size: 0.75rem;
  color: var(--text-secondary);
}

.industry-type {
  font-weight: 500;
  color: var(--text-primary);
}

.date-info {
  display: flex;
  flex-direction: column;
}

.date-info div:first-child {
  font-weight: 500;
  color: var(--text-primary);
}

.time-info {
  font-size: 0.75rem;
  color: var(--text-secondary);
}

.assigned-to {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  min-width: 120px;
}

.assigned-user {
  color: var(--text-primary);
  font-weight: 500;
}

.not-assigned {
  color: var(--text-secondary);
  font-style: italic;
}

.action-buttons {
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.btn-icon {
  width: 2rem;
  height: 2rem;
  border: 1px solid var(--border-color);
  border-radius: var(--radius-md);
  background-color: var(--card-bg);
  color: var(--text-secondary);
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all 0.2s ease;
}

.btn-icon:hover {
  background-color: var(--secondary-color);
  color: var(--text-primary);
  border-color: var(--primary-color);
}

.dropdown {
  position: relative;
}

.dropdown-menu {
  position: absolute;
  top: calc(100% + 8px);
  right: 0;
  z-index: 50;
  min-width: 200px;
  padding: 0.5rem 0;
  background-color: var(--card-bg);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-lg);
  box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
  backdrop-filter: blur(10px);
  opacity: 0;
  visibility: hidden;
  transform: translateY(-10px) scale(0.95);
  transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
  overflow: hidden;
}

.dropdown-menu.show {
  opacity: 1;
  visibility: visible;
  transform: translateY(0) scale(1);
}

.dropdown-item {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  padding: 0.75rem 1rem;
  color: var(--text-primary);
  text-decoration: none;
  font-size: 0.875rem;
  font-weight: 500;
  transition: all 0.15s ease;
  position: relative;
  border-left: 3px solid transparent;
}

.dropdown-item:hover {
  background-color: var(--secondary-color);
  border-left-color: var(--primary-color);
  transform: translateX(2px);
}

.dropdown-item i {
  width: 16px;
  text-align: center;
  font-size: 0.875rem;
}

.dropdown-item.accept-request i {
  color: var(--success-color);
}

.dropdown-item.reject-request i {
  color: var(--warning-color);
}

.dropdown-item.assign-request i {
  color: var(--info-color);
}

.dropdown-item.text-danger {
  color: var(--danger-color);
}

.dropdown-item.text-danger:hover {
  background-color: var(--danger-light);
  border-left-color: var(--danger-color);
}

.dropdown-item.text-danger i {
  color: var(--danger-color);
}

/* Modern dropdown toggle button */
.btn-icon.dropdown-toggle {
  position: relative;
  overflow: hidden;
}

.btn-icon.dropdown-toggle::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  background-color: var(--primary-color);
  border-radius: 50%;
  transform: translate(-50%, -50%);
  transition: all 0.3s ease;
  z-index: -1;
}

.btn-icon.dropdown-toggle:hover::before {
  width: 100%;
  height: 100%;
}

.btn-icon.dropdown-toggle:hover {
  color: white;
  border-color: var(--primary-color);
}

.btn-icon.dropdown-toggle.active {
  background-color: var(--primary-color);
  color: white;
  border-color: var(--primary-color);
}

/* Dropdown arrow */
.dropdown-menu::before {
  content: '';
  position: absolute;
  top: -6px;
  right: 16px;
  width: 12px;
  height: 12px;
  background-color: var(--card-bg);
  border: 1px solid var(--border-color);
  border-bottom: none;
  border-right: none;
  transform: rotate(45deg);
  z-index: -1;
}

/* Bulk actions styles */
.bulk-actions {
  display: flex;
  align-items: center;
  gap: 1rem;
}

.bulk-actions-dropdown {
  position: relative;
}

.bulk-actions-dropdown .btn-outline-sm {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.5rem 1rem;
  border: 1px solid #e5e7eb;
  border-radius: 0.375rem;
  background-color: white;
  color: #374151;
  font-size: 0.875rem;
  cursor: pointer;
  transition: all 0.2s;
}

.bulk-actions-dropdown .btn-outline-sm:hover:not(:disabled) {
  background-color: #f9fafb;
  border-color: #d1d5db;
}

.bulk-actions-dropdown .btn-outline-sm:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

.bulk-actions-dropdown .dropdown-menu {
  position: absolute;
  top: 100%;
  left: 0;
  z-index: 10;
  min-width: 200px;
  margin-top: 0.5rem;
  padding: 0.5rem 0;
  background-color: white;
  border: 1px solid #e5e7eb;
  border-radius: 0.375rem;
  box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
  display: none;
}

.bulk-actions-dropdown .dropdown-menu.show {
  display: block;
}

.bulk-actions-dropdown .dropdown-item {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.5rem 1rem;
  color: #374151;
  text-decoration: none;
  transition: background-color 0.2s;
}

.bulk-actions-dropdown .dropdown-item:hover {
  background-color: #f9fafb;
}

.bulk-actions-dropdown .dropdown-item.text-danger {
  color: #ef4444;
}

.bulk-actions-dropdown .dropdown-item.text-danger:hover {
  background-color: #fee2e2;
}

/* Checkbox styles */
.checkbox {
  width: 1.25rem;
  height: 1.25rem;
  border: 2px solid #d1d5db;
  border-radius: 0.25rem;
  appearance: none;
  -webkit-appearance: none;
  -moz-appearance: none;
  cursor: pointer;
  position: relative;
  transition: all 0.2s;
}

.checkbox:checked {
  background-color: #3b82f6;
  border-color: #3b82f6;
}

.checkbox:checked::after {
  content: '';
  position: absolute;
  left: 0.25rem;
  top: 0.125rem;
  width: 0.375rem;
  height: 0.625rem;
  border: solid white;
  border-width: 0 2px 2px 0;
  transform: rotate(45deg);
}

.checkbox:indeterminate {
  background-color: #3b82f6;
  border-color: #3b82f6;
}

.checkbox:indeterminate::after {
  content: '';
  position: absolute;
  left: 0.25rem;
  top: 0.5rem;
  width: 0.5rem;
  height: 2px;
  background-color: white;
}

/* Table info styles */
.table-info {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  color: #6b7280;
  font-size: 0.875rem;
}

.table-info .separator {
  color: #d1d5db;
}

/* Notification styles */
.notification-container {
  position: fixed;
  top: 1rem;
  right: 1rem;
  z-index: 50;
}

.notification {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  padding: 1rem;
  margin-bottom: 0.5rem;
  background-color: white;
  border-radius: 0.375rem;
  box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
  animation: slideIn 0.3s ease-out;
}

.notification.success {
  border-left: 4px solid #10b981;
}

.notification.error {
  border-left: 4px solid #ef4444;
}

.notification-content {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  flex: 1;
}

.notification-content i {
  font-size: 1.25rem;
}

.notification.success .notification-content i {
  color: #10b981;
}

.notification.error .notification-content i {
  color: #ef4444;
}

.notification-close {
  background: none;
  border: none;
  padding: 0.25rem;
  color: #6b7280;
  cursor: pointer;
  transition: color 0.2s;
}

.notification-close:hover {
  color: #374151;
}

.notification-progress {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 3px;
  background-color: #e5e7eb;
}

.notification.success .notification-progress {
  background-color: #10b981;
}

.notification.error .notification-progress {
  background-color: #ef4444;
}

@keyframes slideIn {
  from {
    transform: translateX(100%);
    opacity: 0;
  }
  to {
    transform: translateX(0);
    opacity: 1;
  }
}

@keyframes progressShrink {
  from {
    width: 100%;
  }
  to {
    width: 0%;
  }
}

.notification.closing {
  animation: slideOut 0.3s ease-in forwards;
}

@keyframes slideOut {
  from {
    transform: translateX(0);
    opacity: 1;
  }
  to {
    transform: translateX(100%);
    opacity: 0;
  }
}

/* Modal styles */
html.modal-open,
body.modal-open {
  overflow: hidden !important;
  height: 100% !important;
}
body.modal-open {
  position: fixed !important;
  width: 100vw !important;
  top: 0 !important;
  left: 0 !important;
}

.modal {
  display: none;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  overflow-y: auto;
  padding: 20px;
}

.modal.show,
.modal[style*="display: block"] {
  display: flex !important;
  align-items: center;
  justify-content: center;
}

.modal-content {
  background-color: #fff;
  border-radius: 8px;
  width: 100%;
  max-width: 600px;
  margin: 40px auto;
  position: relative;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}

.modal-sm {
  max-width: 500px;
}

.modal-header {
  padding: 20px;
  border-bottom: 1px solid #e5e7eb;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.modal-body {
  padding: 20px;
}

.modal-close {
  background: none;
  border: none;
  font-size: 1.5rem;
  cursor: pointer;
  color: #6b7280;
  padding: 5px;
}

.modal-close:hover {
  color: #374151;
}

/* Modern Delete Confirmation Modal Styles */
.delete-confirm-modal .modal-content {
